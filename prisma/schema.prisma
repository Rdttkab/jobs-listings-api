generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id        String   @id @default(uuid())
  // company   String
  // logo      String
  new       Boolean
  featured  Boolean
  position  String
  role      String
  level     String
  postedAt  DateTime @default(now())
  contract  String
  location  String
  languages String[]
  tools     String[]
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
}

model Company {
  id   String @id @default(uuid())
  name String @unique
  logo String
  job  Job[]
}
